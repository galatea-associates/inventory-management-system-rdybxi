# Inventory Management System - Default Environment Configuration
# ====================================================================
# This file contains default environment variables for the IMS web application.
# These values can be overridden by environment-specific .env files
# (e.g., .env.development, .env.production).
# ====================================================================

# API Configuration
# --------------------------------------------------------------------
# Base URLs for backend service communication
REACT_APP_API_BASE_URL=http://localhost:8080
REACT_APP_WEBSOCKET_URL=ws://localhost:8085
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# Environment Settings
# --------------------------------------------------------------------
REACT_APP_ENVIRONMENT=development
REACT_APP_ENABLE_MOCK_API=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_LOG_LEVEL=info

# Security Configuration
# --------------------------------------------------------------------
REACT_APP_AUTH_ENABLED=true
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_CORS_ENABLED=true

# Data Refresh Settings
# --------------------------------------------------------------------
REACT_APP_REFRESH_INTERVAL=30000
REACT_APP_MAX_UPLOAD_SIZE=5242880

# Feature Flags
# --------------------------------------------------------------------
# Control availability of specific system features
REACT_APP_FEATURE_LOCATE_MANAGEMENT=true
REACT_APP_FEATURE_SHORT_SELL_APPROVAL=true
REACT_APP_FEATURE_CALCULATION_RULES=true
REACT_APP_FEATURE_ANALYTICS=true
REACT_APP_FEATURE_EXCEPTION_MANAGEMENT=true

# Development & Debugging
# --------------------------------------------------------------------
REACT_APP_PERFORMANCE_MONITORING=false
REACT_APP_DEBUG_TOOLS=false
REACT_APP_SHOW_VERBOSE_ERRORS=false
REACT_APP_GENERATE_SOURCEMAP=true
REACT_APP_BUILD_VERSION=1.0.0